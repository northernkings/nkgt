{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "main"
  },
  "files": {
    "ignore": [
      "**/public/**",
      "**/build/**",
      "**/dist/**",
      "**/*generated*",
      "**/coverage/**",
      "**/node_modules/**",
      "**/.shopify/**",
      "**/.turbo/**",
      "**/.vite/**",
      "**/.vscode/**",
      "**/.sanity/**",
      "**/.astro/**",
      "**/sanity.types.ts",
      "**/sst-env.d.ts",
      ".sst"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedVariables": "off",
        "noUnknownMediaFeatureName": "off"
      },
      "suspicious": {
        "noExplicitAny": "off",
        "noEmptyInterface": "off",
        "noArrayIndexKey": "off",
        "noMisleadingCharacterClass": "off"
      },
      "security": {
        "noDangerouslySetInnerHtml": "off"
      },
      "style": {
        "useConst": "error",
        "useImportType": "error"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "organizeImports": {
    "enabled": true
  },
  "javascript": {
    "formatter": {
      "enabled": true,
      "trailingCommas": "all",
      "semicolons": "always",
      "attributePosition": "multiline",
      "indentStyle": "space",
      "quoteStyle": "single",
      "indentWidth": 2,
      "bracketSpacing": true
    }
  },
  "json": {
    "parser": {
      "allowComments": true
    },
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2
    }
  },
  "css": {
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "quoteStyle": "single",
      "indentWidth": 2
    }
  }
}
